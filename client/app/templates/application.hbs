<div class="row">

	<div class="col-md-6">
		<h1>Users</h1>

		<form>
			{{input value=firstName placeholder="first name"}}
			{{input value=lastName placeholder="last name"}}
			{{input value=email placeholder="email"}}
			<button {{action 'addUser'}}>Add</button>
		</form>

		<ul>
			{{#each model}}
				<li>{{#link-to 'todos.index' this}}{{firstName}} {{lastName}}{{/link-to}}</li>
			{{/each}}
		</ul>

	</div>

	<div class="col-md-6">
		{{outlet}}
	</div>

</div>
